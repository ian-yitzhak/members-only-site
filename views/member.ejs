<div class="row mt-5">
  <div class="col-md-6 m-auto" id="m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login here</h1>
      <%- include ("./partials/messages"); %>
      
      
      <form action="/member" method="POST">
        
          
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="secret"
            class="form-control"
            placeholder="Enter secret key"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Join</button>
      </form>
      <p class="lead mt-4">
         <a href="/">Home</a>
      </p>
    </div>
  </div>
</div>